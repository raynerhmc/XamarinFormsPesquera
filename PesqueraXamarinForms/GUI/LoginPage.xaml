<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns:chart="clr-namesagepace:Syncfusion.SfChart.XForms;assembly=Syncfusion.SfChart.XForms"
			 xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PesqueraXamarinForms.LoginPage"
             BackgroundColor="Maroon">
     <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="20, 40, 20, 20"
                    Android="20, 20, 20, 20"
                    WinPhone="20, 20, 20, 20" />
     </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"
                     Orientation="Vertical"
                     Spacing="15">
            <Image Source="logo_mp.png" />
            <Label Text="Información Descarga Pesca" TextColor="White"/>
            <Entry x:Name="eUserName" Placeholder="usuário" />
            <Entry x:Name="eUserPassword" Placeholder="contraseña" IsPassword="true" />
            <Button x:Name="bEnterLogin" Text="    Entrar    "  BorderColor="Aqua" BackgroundColor="Silver" TextColor="Teal" Clicked="OnSignIn" HorizontalOptions="Center" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
